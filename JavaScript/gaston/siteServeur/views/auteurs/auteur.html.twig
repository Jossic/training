{% extends "base.html.twig" %}


{% block titre %}Présentation de
	{{auteur.nom}}
	{{auteur.prenom}}
{% endblock %}
{% block contenu %}
	<h2>Nom :
		{{auteur.nom}}</h2>
	<h2>Prénom :
		{{auteur.prenom}}</h2>
	<div>Age :
		{{auteur.age}}</div>
	<div>
		{% if auteur.sexe %}
			Homme
		{% else %}
			Femme
		{% endif %}
	</div>

	<h2>Liste de livres</h2>
	<div class="row">
		{% for livre in auteur.livres %}
			<div class="col-12">
				<div class="row">
					<div class="col-6">
						<img src="/images/{{livre.image}}" alt="image">
					</div>
					<div class="col-6">
						<div>Titre :
							<a href="/livres/{{livre._id}}">{{livre.nom}}</a>
						</div>
						<div>Nombre de pages :
							{{livre.pages}}</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
